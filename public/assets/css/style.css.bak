
body {
    background-color: #e9eaed;
}

select {
    max-width: 250px;
    margin: 0 0 5px;
    font-size: 12px;
    border: 1px solid #bdc7d8;
    padding: 2px;
    color: gray;
}

span {
    font-size: 12px;
}

div {
    font-size: 12px;
}

article {
    background-color: #e9eaed;
    margin-bottom: 10px;
    border-radius: 2px;
}

ul.nav {
    display: table;
}

ul.nav li {
    display: table-cell;
    /*vertical-align: middle;*/
    /*text-align: center;*/
}

.main {
    width: 100%;
}
.main>div{
    width: 90%;
    margin: 0 auto;
}

.header {
    width: 100%;
    height: 42px;
    font-size: 12px;
    background-color: #4e69a2;
    color: #FFF;
}

.header .title {
    height: 42px;
    text-align: center;
    vertical-align: middle;
    font-weight: bold;
}

.header .search-box {
    padding: 8px 70px;
}

.header .search-input {
    float: left;
    color: #141823;
    font-size: 14px;
    -webkit-font-smoothing: antialiased;
    height: 18px;
    line-height: 18.6px;
    padding: 1px 5px 2px 0;
    -webkit-border-radius: 0;
    -webkit-appearance: none;
    border-radius: 4px;
}

.left-content {
    margin-top: 20px;
    /*float: left;*/
    width: 300px;
    height: 500px;
}

.center-content {
    padding: 0 20px 0 20px;
    /*float: left;*/
    width: 600px;
}

.right-content {
    /*float: left;*/
    margin-top: 20px;
    width: 300px;
    height: 500px;
}

.new-article {
    width: 100%;
    display: block;
    font-size: 12px;
    text-decoration: none;
    display:block;
    padding-top:10px;
    padding-bottom:10px;
    text-align:center;
    border-: 1px solid;
    background-color: #4e69a2;
    border-color: #435a8b #3c5488 #334c83;
    border-radius: 2px;
    color: #fff;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, .2);
}

/** article */

.article_box {
    padding:10px;
    background-color: white;
    border-radius: 2px
}

.name {
    font-size: 16px;
    font-weight: bold;
    color: #3b5998;
    margin-bottom: 5px;
}

.interest {
    font-weight: bold;
    font-size: 12px;
    color: #4e69a2;;
}

.interest .on {
    color: #4e69a2;;
    text-decoration: none;
}

.interest .off {
    color: #7f7f7f;
}

.replay_box {
    margin-top: 10px;
    margin-left: 50px;
    background-color: #b2dba1;
}

.article-title {
    font-weight: bold;
    font-size: 16px;
}

.article-body {
    font-size: 14px;
    background-color: white;
    border-radius: 4px;
    margin: 10px 0px 10px 0px;
    padding: 5px;
}

/** いいね */
.article-footer {
    width: 100%;
    color: #7f7f7f;
    margin-top: 7px;
    font-size: 12px;
}

.article-footer .reply a {
    color: #7f7f7f;
    text-decoration: none;
    font-weight: bold;
}

.article-footer .nice {
    color: #7f7f7f;
    font-size: 12px;
    font-weight: bold;
}

.article-footer .nice-btn a {
    color: #7f7f7f;
}

/** post **/
.post-form {
    background-color: white;
    border-radius: 4px;
    padding: 5px;
    margin-bottom: 10px;
}

.post-form .body {
    width: 100%;
}

.post-form .body {
    min-height: 63px;
    height: 63px;
    padding: 5px;
}

.post-form .post-btn {
    width: 85px;
    height: 20px;
    display: block;
    font-size: 12px;
    text-decoration: none;
    display:block;
    padding-top:5px;
    padding-bottom:5px;
    text-align:center;
    border: 1px solid;
    background-color: #4e69a2;
    border-color: #435a8b #3c5488 #334c83;
    border-radius: 2px;
    color: #fff;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, .2);
}

.file-select {
    margin: 15px 0 0 0;
}

.file-thumbnails {
    margin: 7px 0 0 5px;
}

.thumb{
    width: 260px;
}

.post-form .error {
    border: 2px solid;
    border-color: red;
}

/** create **/
.post .error {
    margin-left: 175px;
    color: red;
}

/** left-content */
.search {
    padding:10px;
    background-color: white;
    border-radius: 2px
}

.search .title {
    width: 100%;
    text-align: center;
    color: #4e69a2;
    font-weight: bold;
    margin-bottom: 10px;
}

.search .btn {
    margin-top: 10px;
}